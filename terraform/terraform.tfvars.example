# Project Configuration
project_name = "my-geojson-pipeline"  # Customize this for your project
environment  = "dev"                   # dev, staging, prod

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Terraform Backend (optional - uncomment after creating the bucket)
# terraform_backend_bucket = "my-terraform-state-bucket"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.3.0/24", "10.0.4.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]  # Adjust for your region

# Database Configuration
db_name     = "gisdb"                    # Customize database name
db_username = "postgres"                  # Customize database user
db_password = "your-secure-password-here" # ⚠️ CHANGE THIS - Use a strong password!

# S3 Configuration
s3_bucket_name = "my-unique-geojson-bucket-2024"  # ⚠️ Must be globally unique!

# Lambda Configuration
lambda_function_name = ""  # Leave empty to use: {project_name}-processor
lambda_timeout       = 300
lambda_memory_size   = 512
lambda_runtime       = "python3.11"

# RDS Configuration
db_instance_class    = "db.t3.micro"  # Free tier eligible
db_allocated_storage = 20
db_engine_version    = "15.4" 